<h1>Burgers!</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col s6">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div>
                        
                            <form action="/burgers/{{id}}" method="POST">
                                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
                            </form>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>

            <div class="col s6">
                {{#each burgers}}
                    {{#if this.devoured}}
                        <div class="burgerAte">
                            <div>
                                {{this.burger_name}}
                            </div>
                        </div>


                    {{/if}}



                {{/each}}



            </div>


        </div>



    </div>


</main>

<h2>Add a burger: </h2>

<div class="row">
    <div class="col s12">
        <form action="/burgers" method="POST">

            <input type="text" id="name" name="burger_name" placeholder="Burger here...">
            <button type="submit" class="burgerButton">Add The Burger</button>
        </form>
    </div>
</div>

